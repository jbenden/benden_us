<% wrap_layout :default do %>
<% content_for :description do %><% strip_tags(current_page.summary(150, '...')) %><% end %>
<% content_for :opengraph do %>
<meta property="og:type" content="article">
<meta property="article:published_time" content="<%= current_page.date.strftime("%F") %>">
<!-- <meta property="article:author" content="42403178">
     <meta property="article:publisher" content="11007806698">
-->
<% end %>

<article class="entry hentry prose" itemscope itemtype="http://schema.org/BlogPosting">
  <meta content="<%= current_page.url %>" itemprop="url">
  <header class="entry-header">
    <div class="entry-wrapper wrapper">
      <h1 class="entry-title" itemprop="headline"><%= current_page.title %></h1>
      <span class="entry-category">
        <span itemprop="articleSection"><%= current_page.data.category %></span>, by
        <a class="vcard author" href="https://twitter.com/JBenden" rel="author" itemprop="creator"><span class="fn">Joseph Benden</span></a>
      </span>
      <!-- <a class="scroll-target" href="#top"><span class="ss-icon ss-air ss-navigatedown"></span></a> --><br />
    </div>
  </header>
  <div id="top" class="entry-content" itemprop="articleBody">
    <%= yield %>
  </div>
  <footer class="entry-footer metadata-display">
    <div class="entry-dataitem metadata-item">
      <span class="ss-icon ss-air">&#x1F4C5;</span>
      <time pubdate datetime="<%= current_page.date.strftime("%F") %>" class="entry-dataitem-detail" itemprop="datePublished">
        <span class="metadata-prefix">Published</span> <span class="date updated"><%= current_page.date.strftime("%B %-d, %Y") %></span>
      </time>
    </div>
  </footer>
</article>

<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'bendenus'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
       var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
       dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
       (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

<%= partial "partials/footer" %>
<%= partial "partials/juke" %>

<% end %>
