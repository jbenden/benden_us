<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <title><% if current_page.data.title %><%= current_page.data.title %> &middot; <% end %><%= data.site.name %></title>

  <meta name="viewport" content="width=device-width">
  <meta name="author" content="<%= data.site.creator %>">
  <meta name="copyright" content="<%= data.site.creator %>">
  <meta name="description" content="<% if content_for?(:description) %><%= yield_content :description %><% else %><%= data.site.description %><% end %>">
  <meta property="og:site_name" content="Benden.us">
  <meta property="og:locale" content="en_US">
  <% if content_for?(:opengraph) %><%= yield_content :opengraph %><% end %>

  <link rel="alternate" type="application/rss+xml" title="Atom" href="/feed.xml">
  <link rel="shortcut icon" href="/favicon.png">
  <link rel="icon" type="image/ico" href="/favicon.ico">

  <link rel="stylesheet" href="/assets/stylesheets/fonts.css">
  <%= stylesheet_link_tag "normalize", "syntax", "screen", "jquery.galleryview-3.0-dev.css" %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script type="text/javascript"
          src="/assets/javascripts/jquery.timers-1.2.js"></script>
  <script type="text/javascript"
          src="/assets/javascripts/jquery.easing.1.3.js"></script>
  <script type="text/javascript"
          src="/assets/javascripts/jquery.galleryview-3.0-dev.js"></script>
  <%= javascript_include_tag  "all" %>
</head>
<body class="<%= page_classes %>">
<%= yield %>
</body>
</html>
